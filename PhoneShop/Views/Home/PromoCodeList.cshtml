@model IQueryable<PhoneShop.Models.DataModel.PromoCodeSystem>


<table class="table">
    <thead>
        <tr>
            <th>Promocode</th>
            <th>First Date</th>
            <th class="text-center">Second Date</th>
            <th class="text-left">Discount %</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-left">@item.PromoCode</td>
                <td class="text-left">@item.Date1.ToShortDateString()</td>
                <td class="text-center">@item.Date2.ToShortDateString()</td>
                <td class="text-rigth">@item.DiscountPercentage</td>
                <td>
                    <form asp-action="DeletePromoCode" method="post">
                        <a asp-action="EditPromoCode" class="btn btn-warning"
                           asp-route-id="@item.Id">
                            Edit
                        </a>
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="CreatePromoCode" asp-controller="Home" class="btn btn-success">Create</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Back</a>
</div>
